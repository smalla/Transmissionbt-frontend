# ===== Transmission Daemon Connection =====
TRANSMISSION_HOST=localhost
TRANSMISSION_PORT=9091
TRANSMISSION_USERNAME=
TRANSMISSION_PASSWORD=

# Transmission config directory (for manual daemon management)
TRANSMISSION_CONFIG_DIR=/var/lib/transmission-daemon/.config/transmission-daemon

# ===== Server Configuration =====
PORT=42080
NODE_ENV=development

# Session configuration (CRITICAL: Change in production!)
SESSION_SECRET=your-secret-key-change-this-in-production

# Server binding address (for security, localhost only by default)
HOST=127.0.0.1

# CORS configuration (optional - defaults to localhost:5173 in dev, same-origin in prod)
# FRONTEND_URL=https://yourdomain.com

# ===== Database and Data Paths =====
DB_PATH=./data/users.json
DATA_DIR=/var/www/tf/backend/data
DOWNLOADS_DIR=/mnt/crypted/downloads

# ===== ProFTPD Configuration =====
PROFTPD_PORT=2122
PROFTPD_PASSIVE_PORTS_START=49152
PROFTPD_PASSIVE_PORTS_END=65534
PROFTPD_DEFAULT_UID=1000
PROFTPD_DEFAULT_GID=1000

# ===== RSS and Automation =====
# RSS polling interval (minutes)
RSS_POLL_INTERVAL=30

# Disk monitoring interval (minutes)
DISK_CHECK_INTERVAL=5

# Disk free space threshold (percentage)
DISK_THRESHOLD=10

# ===== Logging =====
LOG_LEVEL=info
LOG_DIR=./logs
